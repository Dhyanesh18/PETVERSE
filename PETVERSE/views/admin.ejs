<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PetVerse Admin - Application Review</title>
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <!-- Header will be included from your existing code -->

  <main class="admin-dashboard">
    <div class="container">
      <h1>Application Management</h1>
      
      <div class="tabs">
        <button class="tab-btn active" data-tab="pending" onclick="switchMainTab('pending')">Pending Applications</button>
        <button class="tab-btn" data-tab="approved" onclick="switchMainTab('approved')">Approved</button>
        <button class="tab-btn" data-tab="rejected" onclick="switchMainTab('rejected')">Rejected</button>
      </div>
      
      <div class="sub-tabs">
        <button class="sub-tab-btn active" data-type="seller" onclick="switchSubTab('seller')">Sellers</button>
        <button class="sub-tab-btn" data-type="service" onclick="switchSubTab('service')">Service Providers</button>
      </div>
        
        <div class="search-filter">
          <input type="text" id="searchInput" placeholder="Search by name, email, or business...">
          <select id="sortFilter">
            <option value="newest">Newest First</option>
            <option value="oldest">Oldest First</option>
            <option value="nameAZ">Name (A-Z)</option>
            <option value="nameZA">Name (Z-A)</option>
          </select>
        </div>
        
        <div id="applicationsContainer" class="applications-container">
          <!-- Applications will be loaded here dynamically -->
          <% if (applications && applications.length > 0) { %>
            <% applications.forEach(application => { %>
              <div class="application-card" 
                   data-type="<%= application.type %>" 
                   data-status="<%= application.status %>">
                <div class="application-header">
                  <h3><%= application.businessName || application.fullName %></h3>
                  <span class="application-date"><%= application.dateApplied %></span>
                </div>
                <div class="application-body">
                  <div class="applicant-info">
                    <p><strong>Full Name:</strong> <%= application.fullName %></p>
                    <p><strong>Email:</strong> <%= application.email %></p>
                    <p><strong>Phone:</strong> <%= application.phone %></p>
                    <% if (application.type === 'seller') { %>
                      <p><strong>Business Name:</strong> <%= application.businessName %></p>
                    <% } else if (application.type === 'service') { %>
                      <p><strong>Service Type:</strong> <%= application.serviceType %></p>
                    <% } %>
                  </div>
                  <div class="application-docs">
                    <p><strong>License/Certification:</strong> 
                      <a href="#" class="doc-link" onclick="viewDocument('<%= application.licenseUrl %>')">View Document</a>
                    </p>
                  </div>
                </div>
                <div class="application-actions">
                  <% if (application.status === 'pending') { %>
                    <button class="btn approve-btn" onclick="approveApplication('<%= application.id %>')">Approve</button>
                    <button class="btn reject-btn" onclick="rejectApplication('<%= application.id %>')">Reject</button>
                  <% } else if (application.status === 'approved') { %>
                    <span class="status-badge approved">Approved on <%= application.dateReviewed %></span>
                    <button class="btn remove-btn" onclick="removeAccount('<%= application.id %>')">Remove Account</button>
                  <% } else if (application.status === 'rejected') { %>
                    <span class="status-badge rejected">Rejected on <%= application.dateReviewed %></span>
                    <button class="btn reconsider-btn" onclick="reconsiderApplication('<%= application.id %>')">Reconsider</button>
                  <% } %>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <div class="no-applications">
              <p>No applications found.</p>
            </div>
          <% } %>
        </div>
        
        <div class="pagination">
          <button id="prevPage" disabled>&laquo; Previous</button>
          <span id="pageIndicator">Page 1 of 1</span>
          <button id="nextPage" disabled>Next &raquo;</button>
        </div>
      </div>
    </div>
  </main>
  
  <!-- Document Viewer Modal -->
  <div id="documentModal" class="modal">
    <div class="modal-content">
      <span class="close-modal">&times;</span>
      <h2>License/Certification Document</h2>
      <div class="document-container">
        <iframe id="documentViewer" src="" frameborder="0"></iframe>
      </div>
    </div>
  </div>
  
  <!-- Confirmation Modal -->
  <div id="confirmationModal" class="modal">
    <div class="modal-content">
      <h2 id="confirmationTitle">Confirm Action</h2>
      <p id="confirmationMessage">Are you sure you want to proceed with this action?</p>
      <div class="modal-actions">
        <button id="confirmButton" class="btn">Confirm</button>
        <button id="cancelButton" class="btn">Cancel</button>
      </div>
    </div>
  </div>
  
  <!-- Footer will be included from your existing code -->
  <script src="/js/admin.js"></script>
</body>
</html>