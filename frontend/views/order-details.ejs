    <div class="main-content">
    <div class="container">
        <div class="order-card">
            <div class="order-header">
                <div>
                    <h1 class="order-title">Order Details</h1>
                    <div class="order-id">Order #<%= order.orderNumber %></div>
                </div>
                <div class="order-status">
                    <%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %>
                </div>
            </div>

        <div class="product-section">
            <% order.items.forEach(function(item) { %>
                <div class="product-row">
                    <% if (item.itemType === 'Pet') { %>
                        <a href="/detail/<%= item.product._id %>">
                            <img src="<%= item.product.image_url %>" alt="Pet Image" class="product-img">
                        </a>
                        <div class="product-info">
                            <a href="/detail/<%= item.product._id %>" style="text-decoration:none;color:inherit;">
                                <div class="product-name"><%= item.product.name %></div>
                            </a>
                            <div class="product-meta">
                                <%= item.product.breed ? item.product.breed + ',' : '' %>
                                <%= item.product.age ? item.product.age + ',' : '' %>
                                <%= item.product.gender ? item.product.gender + ',' : '' %>
                                Seller: <%= order.seller ? order.seller.businessName : 'N/A' %>
                            </div>
                            <div class="product-price">₹<%= item.price.toLocaleString() %></div>
                        </div>
                    <% } else { %>
                        <% if (item.product) { %>
                            <a href="/buy/<%= item.product._id %>">
                                <% if (item.product.images && item.product.images.length > 0) { %>
                                    <img src="data:<%= item.product.images[0].contentType %>;base64,<%= item.product.images[0].data.toString('base64') %>" alt="Product Image" class="product-img">
                                <% } else { %>
                                    <img src="/images/default-product.jpg" alt="Product Image" class="product-img">
                                <% } %>
                            </a>
                            <div class="product-info">
                                <a href="/buy/<%= item.product._id %>" style="text-decoration:none;color:inherit;">
                                    <div class="product-name"><%= item.product.name %></div>
                                </a>
                                <div class="product-meta">
                                    <%= item.product.size ? item.product.size + ',' : '' %>
                                    <%= item.product.color ? item.product.color + ',' : '' %>
                                    Seller: <%= order.seller ? order.seller.businessName : 'N/A' %>
                                </div>
                                <div class="product-price">₹<%= item.price.toLocaleString() %></div>
                            </div>
                        <% } else { %>
                            <img src="/images/default-product.jpg" alt="Product Not Available" class="product-img">
                            <div class="product-info">
                                <div class="product-name" style="color: #666;">Product No Longer Available</div>
                                <div class="product-meta" style="color: #999;">
                                    This product has been removed from our catalog
                                </div>
                                <div class="product-price">₹<%= item.price.toLocaleString() %></div>
                            </div>
                        <% } %>
                    <% } %>
                </div>
            <% }); %>
        </div>

        <div class="location-card">
            <div class="location-icon">
                <i class="fas fa-map-marker-alt"></i>
            </div>
            <div class="location-text">
                <div class="location-title">Share Your Location</div>
                <div class="location-desc">Help our delivery agent reach you faster</div>
            </div>
            <button class="btn btn-primary" onclick="shareLocation()">
                <i class="fas fa-share-alt"></i>
                Share
            </button>
        </div>

        <div class="stepper">
            <% 
                const steps = [
                    { label: 'Payment Pending', date: order.createdAt, done: !['pending_payment'].includes(order.status), active: order.status === 'pending_payment' },
                    { label: 'Order Confirmed', date: order.createdAt, done: ['confirmed', 'processing', 'completed', 'shipped', 'out_for_delivery', 'delivered'].includes(order.status), active: order.status === 'confirmed' },
                    { label: 'Shipped', date: order.shippedAt, done: order.status === 'shipped' || order.status === 'out_for_delivery' || order.status === 'delivered', active: order.status === 'shipped' },
                    { label: 'Out For Delivery', date: order.outForDeliveryAt, done: order.status === 'out_for_delivery' || order.status === 'delivered', active: order.status === 'out_for_delivery' },
                    { label: 'Delivered', date: order.deliveredAt, done: order.status === 'delivered', active: order.status === 'delivered' }
                ];
                steps.forEach((step, idx) => { 
            %>
                <div class="step <%= step.done ? 'done' : '' %> <%= step.active ? 'active' : '' %>">
                    <div class="step-icon">
                        <% if (step.done) { %>
                            <i class="fas fa-check"></i>
                        <% } else { %>
                            <i class="fas fa-circle"></i>
                        <% } %>
                    </div>
                    <div class="step-content">
                        <span class="step-label"><%= step.label %></span>
                        <% if (step.date) { %>
                            <span class="step-date">
                                <%= new Date(step.date).toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric' }) %>
                            </span>
                        <% } %>
                        <% if (step.label === 'Shipped' && step.done) { %>
                            <div class="step-desc">Your item has left our facility<% if(order.shippedLocation){ %>, <%= order.shippedLocation %><% } %></div>
                        <% } %>
                        <% if (step.label === 'Delivered' && !step.done && order.estimatedDelivery) { %>
                            <div class="step-desc">Estimated delivery: <%= new Date(order.estimatedDelivery).toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric' }) %> By 11 PM</div>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        </div>

        <div class="order-actions">
            <button onclick="cancelOrder('<%= order._id %>')" class="btn btn-danger">
                <i class="fas fa-times"></i>
                Cancel Order
            </button>
            <button onclick="editOrder('<%= order._id %>')" class="btn btn-secondary">
                <i class="fas fa-edit"></i>
                Edit Order
            </button>
            <button onclick="showComingSoon()" class="btn btn-secondary">
                <i class="fas fa-comments"></i>
                Chat with us
            </button>
        </div>
    </div>
</div>

<!-- Coming Soon Modal -->
<div id="comingSoonModal" class="modal" style="display: none;">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Chat Feature</h2>
            <button onclick="closeComingSoon()" class="close-btn">&times;</button>
        </div>
        <div class="modal-body">
            <div style="text-align: center; padding: 40px 20px;">
                <div style="font-size: 4rem; color: var(--primary); margin-bottom: 20px;">
                    <i class="fas fa-comments"></i>
                </div>
                <h3 style="color: var(--text-primary); margin-bottom: 16px;">Coming Soon!</h3>
                <p style="color: var(--text-secondary); margin-bottom: 24px; line-height: 1.6;">
                    We're working on bringing you a seamless chat experience to communicate with our support team and sellers. 
                    This feature will be available soon!
                </p>
                <div style="background: var(--primary-light); padding: 16px; border-radius: var(--radius-md); margin-bottom: 24px;">
                    <p style="color: var(--primary); font-weight: 600; margin: 0;">
                        <i class="fas fa-info-circle"></i>
                        For now, you can contact us through email or phone for any order-related queries.
                    </p>
                </div>
                <button onclick="closeComingSoon()" class="btn btn-primary">
                    <i class="fas fa-check"></i>
                    Got it!
                </button>
            </div>
        </div>
    </div>
</div>

