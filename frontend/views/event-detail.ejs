<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= event.title %> - PetVerse</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/event-detail.css">
</head>
<body>
    <%- include('partials/header') %>

    <div class="event-detail-container">
        <div class="event-detail-content">
            <!-- Event Details -->
            <div class="event-details">
                <div class="event-header">
                    <span class="event-category"><%= event.category %></span>
                    <h1><%= event.title %></h1>
                </div>

                <div class="event-info-grid">
                    <div class="info-card">
                        <i class="fas fa-calendar-alt"></i>
                        <div>
                            <h4>Date</h4>
                            <p><%= new Date(event.eventDate).toLocaleDateString('en-IN', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></p>
                        </div>
                    </div>
                    
                    <div class="info-card">
                        <i class="fas fa-clock"></i>
                        <div>
                            <h4>Time</h4>
                            <p><%= event.startTime %> - <%= event.endTime %></p>
                        </div>
                    </div>
                    
                    <div class="info-card">
                        <i class="fas fa-map-marker-alt"></i>
                        <div>
                            <h4>Location</h4>
                            <p><%= event.location.venue %></p>
                            <p class="address"><%= event.location.address %>, <%= event.location.city %></p>
                        </div>
                    </div>
                    
                    <div class="info-card">
                        <i class="fas fa-ticket-alt"></i>
                        <div>
                            <h4>Entry Fee</h4>
                            <p class="fee"><% if (event.entryFee === 0) { %><span class="free">FREE</span><% } else { %>â‚¹<%= event.entryFee %><% } %></p>
                        </div>
                    </div>
                    
                    <div class="info-card">
                        <i class="fas fa-users"></i>
                        <div>
                            <h4>Available Slots</h4>
                            <p><%= availableSlots %> / <%= event.maxAttendees %></p>
                        </div>
                    </div>
                    
                    <div class="info-card">
                        <i class="fas fa-user"></i>
                        <div>
                            <h4>Organizer</h4>
                            <p><%= event.organizer.fullName %></p>
                        </div>
                    </div>
                </div>

                <div class="event-description">
                    <h3>About This Event</h3>
                    <p><%= event.description %></p>
                </div>

                <% if (event.tags && event.tags.length > 0) { %>
                    <div class="event-tags">
                        <% event.tags.forEach(tag => { %>
                            <span class="tag"><%= tag %></span>
                        <% }); %>
                    </div>
                <% } %>

                <div class="event-contact">
                    <h4>Contact Information</h4>
                    <p><i class="fas fa-envelope"></i> <%= event.contactEmail %></p>
                    <% if (event.contactPhone) { %>
                        <p><i class="fas fa-phone"></i> <%= event.contactPhone %></p>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Registration Sidebar -->
        <div class="registration-sidebar">
            <div class="registration-card">
                <% if (!user) { %>
                    <div class="auth-required">
                        <i class="fas fa-user-lock"></i>
                        <p>Please login to register for this event</p>
                        <a href="/login" class="login-btn">Login</a>
                    </div>
                <% } else if (isFull) { %>
                    <div class="event-full">
                        <i class="fas fa-ban"></i>
                        <p>This event is fully booked</p>
                    </div>
                <% } else if (isRegistered) { %>
                    <div class="registered-status">
                        <i class="fas fa-check-circle"></i>
                        <p>You are registered for this event!</p>
                        <button class="unregister-btn" onclick="unregisterFromEvent('<%= event._id %>')">
                            Unregister
                        </button>
                    </div>
                <% } else { %>
                    <h3>Register for Event</h3>
                    <form id="registrationForm" onsubmit="registerForEvent(event, '<%= event._id %>')">
                        <div class="form-group">
                            <label for="numberOfPets">Number of Pets</label>
                            <input type="number" id="numberOfPets" name="numberOfPets" min="1" max="5" value="1" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="specialRequirements">Special Requirements (Optional)</label>
                            <textarea id="specialRequirements" name="specialRequirements" rows="3" placeholder="Any special needs or requirements..."></textarea>
                        </div>
                        
                        <button type="submit" class="register-btn">
                            <i class="fas fa-calendar-check"></i> Register Now
                        </button>
                    </form>
                <% } %>
                
                <div class="quick-info">
                    <h4>Quick Info</h4>
                    <ul>
                        <li><i class="fas fa-user-friends"></i> <%= event.attendees.length %> people registered</li>
                        <li><i class="fas fa-clock"></i> <%= availableSlots %> slots remaining</li>
                        <% if (event.entryFee === 0) { %>
                            <li><i class="fas fa-gift"></i> Free entry</li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>

    <script>
        async function registerForEvent(e, eventId) {
            e.preventDefault();
            
            const numberOfPets = document.getElementById('numberOfPets').value;
            const specialRequirements = document.getElementById('specialRequirements').value;
            
            try {
                const response = await fetch('/events/register', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        eventId,
                        numberOfPets,
                        specialRequirements
                    })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Skip payment for free events
                    if ((data.entryFee || 0) === 0) {
                        window.location.href = `/events/${eventId}/ticket`;
                    } else {
                        window.location.href = `/events/${eventId}/payment`;
                    }
                } else {
                    alert(data.message || 'Failed to register');
                }
            } catch (err) {
                console.error('Registration error:', err);
                alert('Failed to register for event');
            }
        }
        
        async function unregisterFromEvent(eventId) {
            if (!confirm('Are you sure you want to unregister from this event?')) {
                return;
            }
            
            try {
                const response = await fetch(`/events/${eventId}/unregister`, {
                    method: 'DELETE'
                });
                
                const data = await response.json();
                
                if (data.success) {
                    alert('Successfully unregistered from event');
                    location.reload();
                } else {
                    alert(data.message || 'Failed to unregister');
                }
            } catch (err) {
                console.error('Unregister error:', err);
                alert('Failed to unregister from event');
            }
        }
    </script>
</body>
</html>
